pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub-credentials'
        GITHUB_CREDENTIALS = 'github-credentials'
        IMAGE_NAME = 'joamal/crudapp'
        NAMESPACE = 'production'
        HELM_VALUES = 'helm/backend/values-production.yaml'
        HELM_CHART = 'helm/backend'
        ARGOCD_APP = 'backend-production'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/akshayeanil/Containerization_Project.git', credentialsId: GITHUB_CREDENTIALS
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        docker.image("${IMAGE_NAME}:latest").push()
                    }
                }
            }
        }

        stage('Deploy via Helm') {
            steps {
                sh """
                helm upgrade --install backend-production ${HELM_CHART} \
                  -f ${HELM_VALUES} \
                  --namespace ${NAMESPACE}
                """
            }
        }

        stage('Sync ArgoCD') {
            steps {
                sh """
                argocd app sync ${ARGOCD_APP}
                """
            }
        }
    }
}
